page { width: 100%; height: 100%; display: flex; flex-direction: column; }
.video-content { width: 100%; height: 440rpx; }
.content-wrap { flex: 1; overflow: auto; }
.video { display: block; width: 100%; height: 440rpx; }
.name-content { padding: 30rpx 30rpx 0; }
.name-content .name { font-size: 32rpx; font-weight: bold; color: #333333; margin-bottom: 10rpx; }
.name-content .score { font-size: 28rpx; color: #666666; }
.name-content .score text { color: #f60500; }
.title { padding: 30rpx 30rpx 0; font-size: 32rpx; font-weight: bold; color: #333333; }
.content { padding: 20rpx 30rpx 0; font-size: 28rpx; color: #666666; }
.danmu { padding-bottom: 30rpx; }
.danmu input { padding: 4rpx 20rpx; border: 1px solid #e5e5e5; border-radius: 8rpx; }