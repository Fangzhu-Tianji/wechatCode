/* components/good-list/good-list.wxss */
.content-item {
  width: 345rpx;
  height: 230rpx;
  margin-bottom: 20rpx;
  position: relative;
}
.content-item image {
  width: 100%;
  height: 100%;
}
.content-item-text {
  box-sizing: border-box;
  width: 100%;
  height: 60rpx;
  padding: 0 0 2% 4%;
  position: absolute;
  bottom: 0;
  left: 0;
  background: -webkit-linear-gradient(bottom, rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0));
  display: flex;
  align-items: flex-end;
}
.content-item-text text {
  color: #fff;
  font-size: 12px;
  display: -webkit-box !important;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}