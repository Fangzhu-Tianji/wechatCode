page { background-color: #efeff4; }
.g-swiper { width: 100%; height: 750rpx; }
.g-swiper image { width: 100%; height: 100%; }
.product-info { padding: 20rpx 0 10rpx; background-color: #fff; margin-bottom: 20rpx; }
.product-info .source-price { padding: 0 30rpx; margin-bottom: 10rpx; }
.product-info .source-price .p { font-size: 30rpx; font-weight: bold; color: #333333; margin-right: 20rpx; }
.product-info .source-price .price { font-size: 24rpx; color: #999999; text-decoration: line-through; }
.product-info .vip-price { padding: 0 30rpx; font-size: 32rpx; color: #f60500; margin-bottom: 20rpx; }
.product-info .name { padding: 0 30rpx; font-size: 28rpx; color: #333333; }
.product-info .info { width: 100%; height: 60rpx; display: flex; align-items: center; }
.product-info .info .txt { flex: 1; color: #999; font-size: 24rpx; text-align: center; }
.product-info .address { flex: 1.8; height: 60rpx; display: flex; align-items: center; justify-content: center; }
.product-info .iconfont { font-size: 26rpx; color: #999; }
.product-info text { font-size: 24rpx; color: #999; margin: 0 2rpx; }
/* 选规格遮罩 */
.product-shade { width: 100%; height: 100%; background: rgba(0,0,0,.8); position: fixed; top: 0; left: 0; z-index: 9; display: none; }
.product-shade.active { display: block; }
.product-shade-content { box-sizing: border-box; width: 100%; height: 70%; padding: 30rpx 30rpx 130rpx; background-color: #ffffff; position: fixed; bottom: 0; left: 0; z-index: 10; transition: all .4s; }
/* .product-shade-content.active { transform: translateY(100%); } */
.product-shade-content .head { display: flex; margin-bottom: 20rpx; }
.product-shade-content .head .pic { width: 150rpx; height: 150rpx; }
.product-shade-content .head .info { box-sizing: border-box; flex: 1; padding-left: 10rpx; }
.product-shade-content .head .name { font-size: 28rpx; color: #333333; }
.product-shade-content .head .source-price { margin-bottom: 10rpx; }
.product-shade-content .head .p { font-size: 30rpx; color: #f60500; margin-right: 20rpx; }
.product-shade-content .head .price { font-size: 24rpx; color: #999999; text-decoration: line-through; }
.product-shade-content .head .num { font-size: 24rpx; color: #333; }
.product-shade-content .sku-wrap { margin-bottom: 20rpx; }
.product-shade-content .sku-wrap .name { font-size: 30rpx; color: #333333; margin-bottom: 10rpx;  }
.product-shade-content .sku-wrap .txt { display: inline-block; box-sizing: border-box; min-width: 120rpx; padding: 12rpx 24rpx; font-size: 24rpx; text-align: center; color: #333333; border: 1px solid #dddddd; border-radius: 4rpx; margin: 0 20rpx 10rpx 0; }
.product-shade-content .sku-wrap .txt.active { color: #f60500; border-color: #f60500; }
.product-shade-content .sku-wrap .txt.default { color: #cccccc; border: 1rpx dashed #cccccc; }
/* 底部按钮 */
.product-operate { box-sizing: border-box; width: 100%; height: 100rpx; background-color: #ffffff; border-top: 1px solid #eeeeee; position: fixed; bottom: 0; left: 0; z-index: 99; display: flex; align-items: center; }
.product-operate .inco-wrap { flex: 1; height: 100%; border-right: 1rpx solid #eeeeee; }
.product-operate .iconfont { font-size: 40rpx; line-height: 100rpx; text-align: center; color: #999; }
.product-operate .operate { flex: 2; font-size: 28rpx; color: #333333; line-height: 100rpx; text-align: center; }
.product-operate .operate.red { background-color: #f60500; color: #fff; }
.product-operate .operate.default { background-color: #808080; color: #fff; border-right: 1rpx solid #666666; }