.cart-head { padding: 20rpx 30rpx; display: flex; justify-content: space-between; border-bottom: 1rpx solid #eeeeee; }
.cart-head .num { font-size: 24rpx; color: #666666; }
.cart-head .num text { color: #f60500; margin: 0 4rpx; }
.cart-head .operate { font-size: 28rpx; color: #333333; }
.cart-item { width: 100%; border-bottom: 1px solid #eeeeee; position: relative; transition: all .4s; }
.cart-item:nth-last-child(1) { margin-bottom: 80rpx; }
.cart-item.active {  transform: translateX(-180rpx); }
.cart-item-content { box-sizing: border-box; width: 100%; height: 100%; padding: 20rpx 30rpx 20rpx 80rpx; display: flex; }
.cart-item .pic { width: 200rpx; height: 200rpx; margin-right: 30rpx; }
.cart-item .content { flex: 1; }
.cart-item .content .name { font-size: 30rpx; line-height: 1.6; color: #333333; padding-top: 10rpx; height: 100rpx; }
.cart-item .content .spec { font-size: 26rpx; color: #333333; margin-bottom: 10rpx; }
.cart-item .content .price { font-size: 30rpx; color: #f60500; }
.cart-item .choose-wrap { width: 80rpx; height: 100%; position: absolute; top: 0; left: 0 }
.cart-item .choose-wrap .iconfont { font-size: 32rpx; color: #f60500; position: absolute; top: 50%; left: 26rpx; transform: translateY(-50%); }
.cart-item .num-count { position: absolute; right: 30rpx; bottom: 20rpx; display: flex; }
.cart-item .num-count .type { box-sizing: border-box; width: 50rpx; height: 50rpx; border: 1px solid #eeeeee; font-size: 36rpx; color: #333333; line-height: 50rpx; text-align: center; }
.cart-item .num-count .disabled { color: #cccccc; }
.cart-item .num-count .inp { box-sizing: border-box; width: 70rpx; height: 50rpx; line-height: 50rpx; min-height: 1rpx; font-size: 28rpx; text-align: center; border-top: 1rpx solid #eeeeee; border-bottom: 1rpx solid #eeeeee; }
.cart-item .del { width: 180rpx; height: 100%; background-color: #f60500; font-size: 32rpx; color: #fff; display: flex; justify-content: center; align-items: center; position: absolute; top: 0; right: -180rpx; }
/* 底部按钮 */
.cart-operate { box-sizing: border-box; width: 100%; height: 80rpx; padding-left: 30rpx; background-color: #ffffff; position: fixed; bottom: 0; left: 0; z-index: 99; display: flex; align-items: center; }
.cart-operate .choose-wrap { display: flex; align-items: center; }
.cart-operate .choose-wrap .iconfont { font-size: 32rpx; color: #f60500; margin-right: 10rpx; }
.cart-operate .choose-wrap .txt { font-size: 32rpx; color: #333333; }
.cart-operate .all { box-sizing: border-box; flex: 1; padding-left: 40rpx; display: flex; align-items: center; }
.cart-operate .all text { font-size: 30rpx; color: #333333; }
.cart-operate .all .red { color: #f60500; margin-left: 8rpx; }
.cart-operate .btn { width: 200rpx; height: 80rpx; font-size: 28rpx; line-height: 80rpx; text-align: center; background-color: #cccccc; color: #ffffff; }
.cart-operate .btn.active { background-color: #f60500; }